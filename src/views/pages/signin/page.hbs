<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/css/main.min.css">
</head>
<body>
  <main class="hero is-fullheight">
    {{> navbar/index}}

    <section id="signin-container" class="container column is-one-quarter">
      <h2 class="title has-text-centered">Login</h2>
      {{#if errors.auth}}
      <article class="level message is-danger">
        <div class="level-item message-body">{{errors.auth}}</div>
      </article>
      {{/if}}
      <form action="/auth/login" method="post" class="box" target="">
        <div class="field">
          <label class="label" for="email">Email</label>
          <div class="control has-icons-left">
            {{#if errors.email}}
            <input class="input is-danger" type="email" id="email" name="email" value={{formData.email}}>
            {{else}}
            <input class="input" type="email" id="email" name="email" value={{formData.email}}>
            {{/if}}
            <span class="icon is-small is-left">
              <i class="fa fa-envelope"></i>
            </span>
          </div>
          {{#if errors.email}}
          <p class="help is-danger">{{errors.email}}</p>
          {{/if}}
        </div>

        <div class="field">
          <label class="label" for="password">Password</label>
          <div class="control has-icons-left">
            {{#if errors.password}}
            <input class="input is-danger" type="password" id="password" name="password" value={{{formData.password}}}>
            {{else}}
            <input class="input" type="password" id="password" name="password" value={{{formData.password}}}>
            {{/if}}
            <span class="icon is-small is-left">
              <i class="fa fa-key"></i>
            </span>
          </div>
          {{#if errors.password}}
          <p class="help is-danger">{{errors.password}}</p>
          {{/if}}
        </div>

        <div class="field">
          <div class="control">
            <button class="button is-primary is-fullwidth">
              <strong>Sign in</strong>
            </button>
          </div>
        </div>

        <div class="level">
          <div class="level-item">
            Don't have an account?
            <a class="button is-ghost is-underlined" href="/signup">Register</a>
          </div>
        </div>
      </form>
    </section>

    {{> footer}}
  </main>
</body>
</html>